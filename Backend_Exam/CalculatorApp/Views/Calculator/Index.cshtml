@model List<string>

<h2>Calculator</h2>

<form method="post" asp-action="Calculate">
    <input type="number" name="x" required />
    <select name="op">
        <option value="+">+</option>
        <option value="-">-</option>
        <option value="*">*</option>
        <option value="/">/</option>
    </select>
    <input type="number" name="y" required />
    <button type="submit">Calculate</button>
</form>

<h3>History</h3>
<ul>
@foreach (var item in Model)
{
    <li>@item</li>
}
</ul>
